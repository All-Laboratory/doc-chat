# LLM Configuration - Using Groq
LLM_PROVIDER=groq
MODEL_NAME=llama3-70b-8192

# Groq API Key (Get from https://console.groq.com)
GROQ_API_KEY=test-key-for-startup

# Optional Alternative API Keys
# TOGETHER_API_KEY=your_together_api_key
# FIREWORKS_API_KEY=your_fireworks_api_key
# HUGGINGFACE_API_KEY=your_hf_api_key

# Database (optional - will run without it)
# POSTGRES_URI=your_postgres_uri

# Embedding Model (minimal mode - no embedding needed)
# EMBEDDING_MODEL=intfloat/e5-large-v2

# Pinecone Configuration (optional - will run without it)
# USE_CLOUD_RETRIEVER=false
# PINECONE_API_KEY=your_pinecone_key
# PINECONE_ENVIRONMENT=your_env
# PINECONE_INDEX_NAME=document-reasoning

# Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
